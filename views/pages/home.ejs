<!DOCTYPE html>
<html lang="en">
<head>
<title>SuppFrame Submission - Vipul Sachdeva</title>
<link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
      <h1>Airport Data Search</h1>
      <!-- Search form -->
      <form id="searchForm" action="/search" method="get">
        <div class="form-group">
          <label for="airport">Airport</label>
          <input type="text" class="form-control" type="text" id="airport" name="apt" required>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="departure" name="dep" value="1" >
          <label class="form-check-label" for="departure">Departure Only</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="arrival" name="arr" value="1">
          <label class="form-check-label" for="arrival">Arrival Only</label>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
      </form>
    </div >
        <!-- Results section -->
        <% if (typeof data !== 'undefined' && data) { %>
        <div class="container">
            <%- include('results'); %>
        </div>            
          <% } %>
          <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>
</html>